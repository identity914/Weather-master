<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextviewBigBlack" parent="TextAppearance.AppCompat">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorPrimaryExtremelyLight</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/textview_text_size</item>
    </style>

    <style name="TextviewBigBlack.NoBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextviewSmallGray" parent="TextAppearance.AppCompat">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textview_text_size_small</item>
    </style>

    <style name="ImageviewIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">@dimen/image_min_h</item>
        <item name="android:layout_marginLeft">@dimen/image_margin</item>
        <item name="android:layout_marginRight">@dimen/image_margin</item>
        <item name="android:paddingBottom">@dimen/image_padding</item>
        <item name="android:paddingTop">@dimen/image_padding</item>
    </style>

</resources>
